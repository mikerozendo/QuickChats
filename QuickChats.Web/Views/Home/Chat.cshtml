@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <style>
        body {
            background-color: black;
            color: white;
            display: flex;
            flex-direction: column;
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }

        .chat-container {
            flex-grow: 1;
            padding: 10px;
            overflow-y: auto;
            padding-bottom: 60px;
        }

        .message {
            margin-bottom: 10px;
            padding: 10px;
            border-radius: 5px;
            max-width: 80%;
            word-wrap: break-word;
        }

        .message.other {
            background-color: #D9F3FF;
            color: black;
            align-self: flex-start;
        }

        .message.user {
            background-color: #0095f6;
            color: white;
            align-self: flex-end;
        }

        .input-container {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 10px;
            background-color: #333;
            display: flex;
            align-items: center;
        }

        .input-container textarea {
            flex-grow: 1;
            padding: 10px;
            border: none;
            border-radius: 5px;
            outline: none;
            font-size: 1rem;
            resize: none;
            max-height: 100px;
            overflow-y: auto;
            margin-right: 10px;
        }

        .input-container button {
            background-color: #6a0dad;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
        }
    </style>
</head>

<body>
    <div class="chat-container" id="chatContainer"></div>
    <div class="input-container">
        <textarea id="chatInput" placeholder="Type your message here..." rows="1"></textarea>
        <button id="sendBtn">Send</button>
    </div>

    <script type="text/javascript" src="~/js/browser/signalr.js"></script>
    <script>
        var userSelectedName = localStorage.getItem('randomName');
        var hubConnection = new signalR.HubConnectionBuilder().withUrl("/hubs/Chat").build();
        hubConnection.start();

        const chatContainer = document.getElementById('chatContainer');
        const chatInput = document.getElementById('chatInput');
        const sendBtn = document.getElementById('sendBtn');

        sendBtn.addEventListener('click', function () {
            let messageToSend = chatInput.value;
            if (messageToSend.length == 0) {
                return;
            }

            chatInput.value = '';
            createHtmlMessage(messageToSend, userSelectedName);
            hubConnection.send("OnMessageSentAsync", messageToSend, userSelectedName);
        });

        hubConnection.on('onReceivedMessage', (message, username) => {
            onReceivedMessage(message, username)
        });

        function onReceivedMessage(message, userName) {
            debugger;
            let isThePublisherTheSameAsMe = userSelectedName == userName;
            if(isThePublisherTheSameAsMe){
                return;
            }

            createHtmlMessage(message, userName);
        }

        function createHtmlMessage(message, userName) {
            let isThePublisherTheSameAsMe = userSelectedName == userName;
            let messageDiv = document.createElement('div');
            messageDiv.classList.add('message');
            messageDiv.classList.add(isThePublisherTheSameAsMe ? 'user' : 'other');
            messageDiv.textContent = `${isThePublisherTheSameAsMe ? 'me' : userName}: ${message}`;
            chatContainer.appendChild(messageDiv);
        }
    </script>
</body>

</html>
